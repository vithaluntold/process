{
  "name": "epi-xray-agent",
  "version": "1.0.0",
  "description": "EPI X-Ray Desktop Activity Capture Agent",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc && npm run build:renderer",
    "build:renderer": "cp src/renderer/index.html dist/renderer/",
    "start": "npm run build && electron .",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.finaceverse.epi-xray-agent",
    "productName": "EPI X-Ray Agent",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.productivity",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "category": "Utility",
      "icon": "assets/icon.png"
    }
  },
  "keywords": ["task-mining", "activity-tracking", "process-mining"],
  "author": "FinACEverse",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "screenshot-desktop": "^1.15.0",
    "active-win": "^8.0.0",
    "node-global-key-listener": "^0.3.0"
  }
}
